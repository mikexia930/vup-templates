# ===========================================
# Vue 应用环境变量配置示例
# ===========================================

# 应用基础配置
VITE_APP_TITLE=Vue Template
VITE_APP_DESCRIPTION=A Vue 3 + Vite + TypeScript template
VITE_APP_VERSION=1.0.0

# 环境配置
NODE_ENV=development
VITE_NODE_ENV=development

# 开发服务器配置
VITE_DEV_SERVER_HOST=0.0.0.0
VITE_DEV_SERVER_PORT=9001
VITE_DEV_SERVER_OPEN=false

# API 配置
VITE_API_BASE_URL=http://localhost:3000/api
VITE_API_TIMEOUT=10000
VITE_API_VERSION=v1

# 第三方服务配置
VITE_GOOGLE_ANALYTICS_ID=
VITE_GOOGLE_MAPS_API_KEY=
VITE_SENTRY_DSN=

# 功能开关
VITE_ENABLE_MOCK=true
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false

# 路由配置
VITE_ROUTER_MODE=history
VITE_ROUTER_BASE=/

# 国际化配置
VITE_I18N_LOCALE=zh-CN
VITE_I18N_FALLBACK_LOCALE=en-US

# 主题配置
VITE_THEME_PRIMARY_COLOR=#3b82f6
VITE_THEME_MODE=light

# 构建配置
VITE_BUILD_SOURCEMAP=false
VITE_BUILD_DROP_CONSOLE=true
VITE_BUILD_DROP_DEBUGGER=true

# 代理配置（开发环境）
VITE_PROXY_TARGET=http://localhost:3000
VITE_PROXY_CHANGE_ORIGIN=true

# 静态资源配置
VITE_PUBLIC_PATH=/
VITE_ASSETS_INLINE_LIMIT=4096

# 安全配置
VITE_CSP_ENABLED=false
VITE_CSP_REPORT_URI=

# 调试配置
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info
