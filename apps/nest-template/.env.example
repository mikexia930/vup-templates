# ===========================================
# NestJS 应用环境变量配置示例
# ===========================================

# 应用基础配置
APP_NAME=NestJS Template
APP_DESCRIPTION=A NestJS + TypeScript + Prisma template
APP_VERSION=1.0.0

# 环境配置
NODE_ENV=development
PORT=3000

# 数据库配置
DATABASE_URL=postgresql://username:password@localhost:5432/nest_template
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=username
DB_PASSWORD=password
DB_DATABASE=nest_template
DB_SYNCHRONIZE=true
DB_LOGGING=true

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key
JWT_REFRESH_EXPIRES_IN=30d

# 认证配置
AUTH_SESSION_SECRET=your-session-secret
AUTH_SESSION_MAX_AGE=86400000

# 文件上传配置
UPLOAD_DEST=./uploads
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# 邮件配置
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password
MAIL_FROM=noreply@example.com

# 日志配置
LOG_LEVEL=debug
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# 限流配置
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# CORS 配置
CORS_ORIGIN=http://localhost:3000,http://localhost:9001
CORS_CREDENTIALS=true

# 安全配置
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true
SWAGGER_ENABLED=true

# 监控配置
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# 缓存配置
CACHE_TTL=300
CACHE_MAX=100

# 任务队列配置
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_CONCURRENCY=5

# 第三方服务配置
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# 调试配置
DEBUG_MODE=false
VERBOSE_LOGGING=false
